<?xml version="1.0" encoding="utf-8"?>
<resources>

    <string name="home_screen_widget_track_name_placeholder">Play something on Spotify</string>
    <string name="home_screen_widget_artist_name_placeholder">Check AutoQueue service is running</string>



    <style name="home_screen_widget_playback_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:backgroundTint">#00FFFFFF</item>

    </style>

    <style name="home_screen_widget_track_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/home_screen_widget_track_name_placeholder</item>

    </style>

    <style name="home_screen_widget_artist_name">
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:text">@string/home_screen_widget_artist_name_placeholder</item>

    </style>
</resources>
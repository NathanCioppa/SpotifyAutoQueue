<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SpotifyAutoQueue" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorAccent">@color/spotify_logo_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/spotify_logo_green</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="TransparentStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="settings_category_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">8dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="category_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="back_arrow_button">
        <item name="android:layout_width">48dp</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:background">#00FFFFFF</item>
        <item name="android:scaleX">1.1</item>
        <item name="android:scaleY">1.1</item>
        <item name="android:textColor">@color/black</item>
        <item name="color">@color/black</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="activity_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:textSize">26sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="background">
        <item name="android:background">@color/white</item>
    </style>

    <style name="button_background">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="tintedBackground">
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="banner_color">
        <item name="android:background">@color/logo_green_transparent</item>
    </style>

    <style name="card_background">
        <item name="android:background">@color/card_white</item>
    </style>

    <style name="popupBackground">
        <item name="android:backgroundTint">@color/spotify_logo_green</item>
    </style>

    <style name="textColor">
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/black</item>
        <item name="color">@color/black</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="darkLightTint">
        <item name="android:tint">@color/black</item>
    </style>

    <style name="Theme.SpotifyAutoQueue.AppWidgetContainerParent" parent="@android:style/Theme.DeviceDefault">
        <!-- Radius of the outer bound of widgets to make the rounded corners -->
        <item name="appWidgetRadius">16dp</item>
        <!--
        Radius of the inner view's bound of widgets to make the rounded corners.
        It needs to be 8dp or less than the value of appWidgetRadius
        -->
        <item name="appWidgetInnerRadius">8dp</item>
    </style>

    <style name="Theme.SpotifyAutoQueue.AppWidgetContainer" parent="Theme.SpotifyAutoQueue.AppWidgetContainerParent">
        <!-- Apply padding to avoid the content of the widget colliding with the rounded corners -->
        <item name="appWidgetPadding">0dp</item>
    </style>

    <style name="widgetBackground">
        <item name="android:id">@android:id/background</item>
        <item name="android:padding">0dp</item>
        <item name="android:background">@drawable/app_widget_background</item>
    </style>

    <style name="widgetPlaybackButton">
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:tint">@color/white</item>
    </style>

    <style name="widgetConfigCategoryTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="configWidgetButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:backgroundTint">@color/middle_grey</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="gradientOverlay">
        <item name="android:background">@drawable/gradient</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>

    <style name="toggleSwitch">
        <item name="colorControlActivated">@color/spotify_logo_green</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="bottomSheet" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="android:background">@drawable/rounded_corners_top</item>
        <item name="android:backgroundTint">@color/logo_green_transparent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    style="@style/background">

    <ImageView
        android:id="@+id/searchedTrackImage"
        android:layout_width="70dp"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/searchedTrackTitle"
        style="@style/textColor"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/name_placeholder"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchedTrackImage"
        app:layout_constraintTop_toTopOf="@+id/searchedTrackImage" />

    <TextView
        android:id="@+id/searchedTrackArtist"
        style="@style/textColor"
        android:layout_width="0dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:text="@string/artist_placeholder"
        app:layout_constraintBottom_toBottomOf="@+id/searchedTrackImage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/searchedTrackImage" />
</androidx.constraintlayout.widget.ConstraintLayout>
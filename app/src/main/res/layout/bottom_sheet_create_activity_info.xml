<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottomSheetContainer"
    style="@style/bottomSheet"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:clipToPadding="false"
        android:paddingBottom="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView5"
                style="@style/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_create_group_title"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView4"
                style="@style/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_create_group_summary" />

            <TextView
                android:id="@+id/textView3"
                style="@style/infoScreenCategoryTitle"
                android:layout_width="match_parent"
                android:text="@string/info_create_group_parent_title"
                />

            <TextView
                android:id="@+id/textView12"
                style="@style/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_create_group_parent" />

            <TextView
                android:id="@+id/textView16"
                style="@style/infoScreenCategoryTitle"
                android:layout_width="match_parent"
                android:text="@string/info_create_group_condition_title"
                />

            <TextView
                android:id="@+id/textView18"
                style="@style/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_create_group_condition" />

            <TextView
                android:id="@+id/textView19"
                style="@style/infoScreenCategoryTitle"
                android:layout_width="match_parent"
                android:text="@string/info_create_group_child_title" />

            <TextView
                android:id="@+id/textView20"
                style="@style/textColor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/info_create_group_child" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>